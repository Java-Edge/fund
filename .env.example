# ===========================================
# Redis 缓存配置（可选）
# ===========================================
# Redis 主机地址，默认 localhost
export REDIS_HOST="localhost"

# Redis 端口，默认 6379
export REDIS_PORT="6379"

# Redis 数据库编号，默认 0
export REDIS_DB="0"

# Redis 密码，无密码则留空或不设置
# export REDIS_PASSWORD="your_password"

# 缓存过期时间（秒），默认 30 秒
export REDIS_TTL="30"

# ===========================================
# 管理员账号配置（可选）
# ===========================================
# 管理员账号（微信号/抖音号），默认 admin
export ADMIN_SOCIAL_ID="admin"

# 管理员密码，默认 admin
export ADMIN_PASSWORD="admin"

# ===========================================
# MySQL 数据库配置（可选）
# ===========================================
# MySQL 主机地址，默认 localhost
export MYSQL_HOST="localhost"

# MySQL 端口，默认 3306
export MYSQL_PORT="3306"

# MySQL 用户名，默认 root
export MYSQL_USER="root"

# MySQL 密码
export MYSQL_PASSWORD="your_password"

# MySQL 数据库名，默认 fund
export MYSQL_DATABASE="fund"
